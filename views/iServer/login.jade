doctype html
link(rel='stylesheet', href='/stylesheets/login.css')
link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
head
   title iServer Login

   body
      div.loginForm.front-container
         div.loginInputContainer
            div#user
               img#userImg(src="images/user.png")
            div#formContainer
               form(role='form')
                  div.form-group#userContainer
                     label
                     |用户名&nbsp&nbsp
                     input(type="text" placeholder="请输入用户名")#userName
                  div.form-group#passwordContainer
                     label
                     |密&nbsp&nbsp&nbsp&nbsp码&nbsp&nbsp
                     input(type="password" placeholder="请输入密码")#passWord
                  div#nextDiv
                     input(type="button" value="下一步" onclick='renderPassword()').btn#submitLogin
                  div#submitDiv(style="display: none;")
                     input(type="submit" value="登入").btn#submitLogin
            div#GitHubContainer
               ul
                  li#signUp
                     a(href='/signUp') 注册新用户
                  li#GitHubLogin
                     a(href="/auth/github")
                        img#loginGithubImg(src="images/github.png")



script.
   var userName = document.getElementById("userContainer"),
           password = document.getElementById("passwordContainer"),
           next = document.getElementById("nextDiv"),
           submit = document.getElementById("submitDiv"),
           CONFIG = {
              userNameClass: userName.className,
              passwordClass: password.className,
              nextClass: next.className,
              submitClass: submit.className
           },
           userNameClass = userName.className;

   userName.className += userName.className + ', showContainer';

   function checkValue() {

      // 校验密码是否输入
      if (userName.className.indexOf('showContainer')) {

         if (document.getElementById("userName").value == "") {
            alert("请输入用户名");
            return false;
         }
      } else {

      }
   }

   function renderPassword() {
      if (!checkValue()) {
         return;
      }
      password.className += password.className + ', showContainer';
      userName.className = CONFIG.userNameClass;
   }

